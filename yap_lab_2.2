using System;

namespace yap_lab_2._2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Введите значение х - ");
            double x = double.Parse(Console.ReadLine());
            double f = 0;
            if (x >= -9 && x <= -7)
                f = 0;
            if (x > -7 && x <= -3)
                f = x + 7;
            if (x > -3 && x < -2)
                f = 4;
            if (x >= -2 && x <= 2)
                f = x * x;
            if (x > 2 && x <= 4)
                f = -2 * x + 8;
            if (x > 4 && x <= 7)
                f = 0;
            Console.Write("f(x) = {0}", f);
        }
    }
}
