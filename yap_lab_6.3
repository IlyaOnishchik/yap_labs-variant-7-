using System;
using System.Globalization;

namespace yap_lab_6._3
{
    class Program
    {
        static void input(ref int[,] array, int n)
        {
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    Random rnd = new Random();
                    array[i, j] = rnd.Next(-10, 10);
                }
            }
        }

        static void output(ref int[,] array, int n)
        {
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    Console.Write("{0, 4} ", array[i, j]);
                }
                Console.WriteLine();
            }
        }

        static void function(ref int[,] array, int n)
        {
            if (n % 2 == 0)
            {
                int j = n / 2 - 1;
                for (int i = 0; i < n; i++)
                {
                    int x = array[i, j];
                    array[i, j] = array[i, j + 1];
                    array[i, j + 1] = x;
                }
            }
            else
            {
                int j = 0;
                for (int i = 0; i < n; i++)
                {
                    int x = array[i, j];
                    array[i, j] = array[i, n / 2];
                    array[i, n / 2] = x;
                }
            }
        }

        static void Main(string[] args)
        {
            Console.Write("Введите размер массива n = ");
            int n = Convert.ToInt32(Console.ReadLine());

            int[,] array = new int[n, n];
            input(ref array, n);
            output(ref array, n);
            function(ref array, n);
            Console.WriteLine();
            output(ref array, n);
        }
    }
}

