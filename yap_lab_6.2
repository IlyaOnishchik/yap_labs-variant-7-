using System;

namespace yap_lab_6._2
{
    class Program
    {
        static void input(ref int[] array, int size)
        {
            Console.WriteLine("Введите массив");
            for (int i = 0; i < size; i++)
            {
                array[i] = Convert.ToInt32(Console.ReadLine());
            }
        }
        static void function(ref int[] array, int size)
        {
            int max = array[0];
            int max_position = 0;
            for (int i = 1; i < size; i++)
            {
                if (max <= array[i])
                {
                    max = array[i];
                    max_position = i;
                }
            }
            Console.WriteLine($"Позиция последнего максимального элемента {max_position + 1}");
        }

        static void Main(string[] args)
        {
            Console.Write("Введите размер массива = ");
            int size = Convert.ToInt32(Console.ReadLine());

            int[] array = new int[size];
            input(ref array, size);
            function(ref array, size);
        }
    }
}
